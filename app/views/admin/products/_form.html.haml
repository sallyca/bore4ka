= semantic_form_for [:admin, @product] do |f|
  = f.inputs "Общее" do
    = f.input :title
    = f.input :description
    = f.input :info

  - f.object.build_image unless f.object.image
  = f.inputs "Image", :for => :image do |f_i|
    - if f_i.object.image
      %li= image_fu(f.object.image)
    = f_i.input :image, :as => :file

  = f.buttons